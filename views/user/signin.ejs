<div class="my_bg my_active">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1 style="padding-top:40%; text-align: center">Sign In</h1>
        <% if (hasErrors) { %>
            <div class="alert alert-danger">
                <% messages.forEach(function(message) {%>
                  <div><%= message %></div>
                <% }); %>
            </div>
        <% } %>
        <form action="" method="post" style="padding-bottom:60%">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div style="text-align: center">
              <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
          </form>
    </div>
  </div>
</div>

<script>
var images = ["https://static.pexels.com/photos/226243/pexels-photo-226243.jpeg", "https://iso.500px.com/wp-content/uploads/2016/03/pedroquintela.jpg", "http://cdn.mos.cms.futurecdn.net/gvQ9NhQP8wbbM32jXy4V3j.jpg"]
   ,delay  = 3000000  // 3 seconds
   ,pointer= 1

setInterval(function() {
         var selectedBg = $('.my_bg:not(.my_active)')
           , image      = images[Math.round(pointer)%images.length];
         $('.my_bg.my_active').removeClass('my_active');
         selectedBg.css({'backgroundImage':"url("+image+")"}).addClass('my_active');
         pointer += 0.001;
       });
</script>
